<script type="text/javascript">
    function validateData() {
        
        debugger;
        if ($("#manangebytenantId").val().trim() == "") {
            swal({
                title: "Enter the value!", icon: "error"
            });
            return false;
        }
        else if ($("#principalId").val().trim() == "") {
            swal({
                title: "Enter the value!", icon: "error"
            });
